[flake8]
select = WPS
max-line-length = 88
exclude =
    .bzr,
    .direnv,
    .eggs,
    .git,
    .git-rewrite,
    .hg,
    .mypy_cache,
    .nox,
    .pants.d,
    .pytype,
    .ruff_cache,
    .svn,
    .tox,
    .venv,
    __pypackages__,
    _build,
    buck-out,
    build,
    dist,
    node_modules,
    venv,
    .env,
    notebooks,
    __pycache__,
    .egg-info,
    tests/*,
    *test*,
    benchmark*

format = html
htmldir = flake8-report

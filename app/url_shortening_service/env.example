# .env.example
# Application Settings
APP_NAME=URL Shortening Service
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
BASE_URL=http://localhost:8010

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings (Docker internal ports)
DATABASE_URL=postgresql://postgres:password@url-shortener-db:5432/url_shortener
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Settings (Docker internal ports)
REDIS_URL=redis://url-shortener-redis:6379
REDIS_DB=0
REDIS_CACHE_TTL=3600

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars

# URL Shortener Settings
SHORT_CODE_LENGTH=6
MAX_GENERATION_ATTEMPTS=5
DEFAULT_EXPIRATION_HOURS=168

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

